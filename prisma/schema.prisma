// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  confirmed  Boolean    @default(false)
  password   String
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  userType   UserType
  Customer   Customer[]
}


model Customer {
  id                Int                 @id @default(autoincrement())
  photo             String?             @db.Text    
  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId            Int
  balance           Balance[]
  movementExtract   MovementExtract[]
  favorite          Favorite[]
  cartsByUser       CartsByUser[]
  activeCartsByUser ActiveCartsByUser[]
}

model Balance {
  id         Int      @id @default(autoincrement())
  balance    Float
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  customerId Int
}

model MovementExtract {
  id           Int          @id @default(autoincrement())
  value        Int
  created_at   DateTime     @default(now())
  movementType MovementType
  customer     Customer     @relation(fields: [customerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  customerId   Int
}

model Product {
  id              Int              @id @default(autoincrement())
  name            String
  description     String           
  price           Float
  photo           String   @db.Text        
  preparationTime Int?
  disponibility   Boolean
  productType     ProductType
  favorite        Favorite[]
  ProductsByCart  ProductsByCart[]
}

model Favorite {
  id         Int      @id @default(autoincrement())
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  customerId Int
  productId  Int
}

model CartsByUser {
  id                Int                 @id @default(autoincrement())
  status            StatusCart
  preparationTime   Int?
  customer          Customer            @relation(fields: [customerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  customerId        Int
  created_at        DateTime            @default(now())
  updated_at        DateTime            @updatedAt
  activeCartsByUser ActiveCartsByUser[]
  ProductsByCart    ProductsByCart[]
}

model ActiveCartsByUser {
  id            Int         @id @default(autoincrement())
  customer      Customer    @relation(fields: [customerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  cartsByUser   CartsByUser @relation(fields: [cartsByUserId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  customerId    Int
  cartsByUserId Int
}

model ProductsByCart {
  id            Int         @id @default(autoincrement())
  created_at    DateTime    @default(now())
  product       Product     @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  cartsByUser   CartsByUser @relation(fields: [cartsByUserId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  productId     Int
  cartsByUserId Int
  qntd          Int
  total_value   Float
}

model StoreStatus{
  id            Int @id @default(autoincrement())
  created_at    DateTime @default(now())
  status        StoreByStatus
}

model ProductTypeFilter{
  id            Int @id @default(autoincrement())
  created_at    DateTime @default(now())
  type          String
}

enum UserType {
  COLABORATOR
  CUSTOMER
  ADMIN
}

enum MovementType {
  DEPOSIT
  SPEND
  RETURN
}

enum ProductType {
  Frito
  Assado
  Bebidas
  Doces
  Frutas
  Natural
  PF
}

enum StatusCart {
  ACTIVE
  DISABLE
}

enum StoreByStatus {
  OPEN
  CLOSED
}
